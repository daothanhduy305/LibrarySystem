<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.112"
          fx:controller="ebolo.libma.management.ui.controllers.AddStudentController">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <Label text="Student ID:" GridPane.rowIndex="0"/>
        <Label text="First name:" GridPane.rowIndex="1"/>
        <Label text="Middle name:" GridPane.rowIndex="2"/>
        <Label text="Last name:" GridPane.rowIndex="3"/>
        <Label text="Username:" GridPane.rowIndex="4"/>
        <Label text="Email:" GridPane.rowIndex="5"/>
        <Label text="Intake:" GridPane.rowIndex="6"/>
        <Label text="Major:" GridPane.rowIndex="7"/>
        <TextField fx:id="idTextField" GridPane.columnIndex="1"/>
        <TextField fx:id="fNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <TextField fx:id="mNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <TextField fx:id="lNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <TextField fx:id="usernameTextField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <TextField fx:id="emailTextField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <TextField fx:id="intakeTextField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        <ComboBox fx:id="courseComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnSpan="2147483647" GridPane.halignment="RIGHT" GridPane.hgrow="ALWAYS"
              GridPane.rowIndex="8">
            <children>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#addStudent" text="Add"/>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" text="Cancel"/>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</GridPane>
